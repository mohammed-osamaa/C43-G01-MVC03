@using Demo.Presention.ViewModels.UserViewModels
@model DeletedUserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-5 w-75">Are You Sure Ypu Want To Delete @($"{Model.FirstName} {Model.LastName}") </h2>
<br />
<div>
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="mt-4">
            <form method="post" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id">
                <div class="row">
                    <div class="form-group col-12">
                        <label class="col-form-label" asp-for="Id"></label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12">
                        <label class="col-form-label" asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12">
                        <label class="col-form-label" asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12">
                        <label class="col-form-label" asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12">
                        <label class="col-form-label" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                </div>
                <div class="mt-4 m-auto">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                    <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
                </div>
            </form>
        </div>
    </div>
</div>