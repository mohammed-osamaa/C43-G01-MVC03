@using Demo.DataAccessLayer.Models.EmployeesModel
@using Demo.DataAccessLayer.Models.Shared.Enums
@using Demo.Presention.ViewModels.EmployeeViewModels
@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Employee</h1>
    <form method="post" asp-controller="Employee" asp-action="Edit" class="row col-8">
        <div asp-validation-summary="ModelOnly"></div>

		<partial name="PartialViews/CreateAndEditEmployeePartialView" />

        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Save" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
